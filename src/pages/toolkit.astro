---
import Layout from "../layouts/Layout.astro";
import NeuralAgentScreen from "../components/NeuralAgentScreen.astro";
---

<Layout>
    <div class="toolkit-container">
        <a href="/" class="back-link">&larr; BACK TO HUB</a>
        <NeuralAgentScreen />
    </div>
</Layout>

<style>
    .toolkit-container {
        width: 100vw;
        height: 100vh;
        background: #000;
        color: #fff;
        overflow: hidden;
        position: relative;
    }

    .back-link {
        position: absolute;
        top: 1rem;
        left: 1rem;
        z-index: 100;
        color: var(--color-primary);
        text-decoration: none;
        font-family: var(--font-display);
        font-size: 0.8rem;
        opacity: 0.5;
        transition: opacity 0.3s;
    }

    .back-link:hover {
        opacity: 1;
    }
</style>
