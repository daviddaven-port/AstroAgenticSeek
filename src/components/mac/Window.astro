---
interface Props {
    title?: string;
    width?: string;
    height?: string;
    className?: string;
}

const {
    title = "Terminal",
    width = "800px",
    height = "600px",
    className = "",
} = Astro.props;
---

<div
    class={`mac-glass rounded-xl flex flex-col overflow-hidden mac-window-enter ${className}`}
    style={`width: ${width}; height: ${height};`}
>
    <!-- Window Header -->
    <div
        class="h-10 border-b border-white/10 flex items-center px-4 justify-between select-none"
    >
        <div class="flex gap-2">
            <div
                class="w-3 h-3 rounded-full bg-[#ff5f56] hover:brightness-110 cursor-pointer"
            >
            </div>
            <div
                class="w-3 h-3 rounded-full bg-[#ffbd2e] hover:brightness-110 cursor-pointer"
            >
            </div>
            <div
                class="w-3 h-3 rounded-full bg-[#27c93f] hover:brightness-110 cursor-pointer"
            >
            </div>
        </div>
        <div class="text-white/80 text-sm font-medium">{title}</div>
        <div class="w-14"></div>
        <!-- Spacer for centering title -->
    </div>

    <!-- Content Area -->
    <div class="flex-1 overflow-auto p-4 bg-black/20 text-white relative">
        <slot />
    </div>
</div>
