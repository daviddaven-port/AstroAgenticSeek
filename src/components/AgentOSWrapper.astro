---
import { AgentOSDesktop } from './AgentOSDesktop';
---

<div id="agent-os-root"></div>

<script>
  import React from 'react';
  import ReactDOM from 'react-dom/client';
  import { AgentOSDesktop } from './AgentOSDesktop';

  const root = document.getElementById('agent-os-root');
  if (root) {
    ReactDOM.createRoot(root).render(
      React.createElement(AgentOSDesktop)
    );
  }
</script>

<style is:global>
  #agent-os-root {
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  /* Tailwind-like utilities for the React component */
  * {
    box-sizing: border-box;
  }

  .text-shadow {
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8);
  }
</style>
