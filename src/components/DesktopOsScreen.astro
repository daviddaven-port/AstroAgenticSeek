<div class="screen right-screen">
    <div class="os-container">
        <!-- Placeholder for DaBaeOS Iframe -->
        <div class="os-placeholder">
            <h2>DaBaeOS Clone</h2>
            <p>Loading System Interface...</p>
        </div>
        <iframe src="https://choppd.beauty" class="os-frame" title="DaBaeOS"
        ></iframe>

        <div class="webos-disclaimer">
            <p>
                Running in View-Only Mode. Press LEFT to return to Command
                Center.
            </p>
        </div>
    </div>
</div>

<style>
    .right-screen {
        width: 100%;
        height: 100%;
        background: #000;
        overflow: hidden;
    }

    .os-container {
        width: 100%;
        height: 100%;
        position: relative;
    }

    .os-frame {
        width: 100%;
        height: 100%;
        border: none;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 10;
        background: #fff; /* Temp bg to see it */
    }

    .os-placeholder {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        text-align: center;
        z-index: 1;
    }

    .webos-disclaimer {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 20;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-family: sans-serif;
        font-size: 0.8rem;
        pointer-events: none;
    }
</style>
